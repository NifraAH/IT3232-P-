import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n = sc.nextInt();

        for (int i = 1; i <= n; i++) {
            int mid = n / 2;
            if (i <= mid) {
                System.out.print((mid - i + 1) + " ");
            } else {
                System.out.print(i + " ");
            }
        }
        sc.close();
    }
}
